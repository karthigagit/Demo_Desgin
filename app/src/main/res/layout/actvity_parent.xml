<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding_5"
    android:layout_marginBottom="@dimen/vfy_10"
    android:background="@drawable/parent_layout_backround"
    tools:context=".Actvity.Activity_ParentActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_Image"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/padding_5"
        android:layout_marginLeft="@dimen/vfy_10"
        android:layout_marginTop="@dimen/margin_top_20"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_text_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:padding="@dimen/padding_5"
        android:textSize="@dimen/text_size_18"
        app:layout_constraintTop_toTopOf="@id/profile_Image"
        app:layout_constraintStart_toEndOf="@+id/profile_Image"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/child_recyclerview"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/vfy_10"
        android:layout_marginBottom="@dimen/top_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_Image"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
