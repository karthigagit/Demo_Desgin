<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/aed_backround"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp">


        <ImageView
            android:id="@+id/aedImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:padding="7dp"
            android:src="@drawable/aed_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="3dp" />

        <TextView
            android:id="@+id/aed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:textColor="@color/black"
            android:text="@string/aed"
            app:layout_constraintStart_toEndOf="@id/aedImage"
            app:layout_constraintTop_toTopOf="@+id/aedImage" />

        <ImageView
            android:id="@+id/aedArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@drawable/arrow"
            app:layout_constraintStart_toEndOf="@id/aed"
            app:layout_constraintTop_toTopOf="@+id/aed" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/pathImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/aed_arrow_image"
        app:layout_constraintEnd_toStartOf="@+id/constrains"
        app:layout_constraintStart_toEndOf="@+id/constrain"
        app:layout_constraintTop_toTopOf="@+id/constrain" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrains"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/aed_backround"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/gbpImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:padding="7dp"
            android:src="@drawable/gbpimage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/gbp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:text="@string/gbp"
            android:textColor="#101010"
            app:layout_constraintStart_toEndOf="@id/gbpImage"
            app:layout_constraintTop_toTopOf="@+id/gbpImage" />

        <ImageView
            android:id="@+id/gbpArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@drawable/arrow"
            app:layout_constraintStart_toEndOf="@id/gbp"
            app:layout_constraintTop_toTopOf="@+id/gbp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
